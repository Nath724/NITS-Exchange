<%- include("../partials/header"); %>
<div class = "jumbotron">
    <div class = container>
        <h1>Items</h1>
    </div>
</div>

<div class = "row">
    <% items.forEach(item=>{ %>
        <div class = "col-md-4 col-sm-6">
            <div class="card" style="margin: 1em">
                <div class="card-body" style="margin: 2em">
                  <h5 class="card-title text-center"><%= item.title %></h5>
                    <div class = "text-center">
                        <a href="/item/<%= item._id%>" class="btn btn-primary btn-sm">Details</a>                    
                    </div>
                </div>
              </div>
        </div>
    <%});%>
</div>
<div>
    <a href="/item/new" class="btn btn-primary">Add New Item</a>
</div>
<%- include("../partials/footer"); %>
