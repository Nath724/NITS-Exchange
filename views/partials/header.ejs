<!DOCTYPE html> 
<html>
    <head>
        <title>NITS Exchange</title>
        <link rel="stylesheet" href="/stylesheets/bootstrap.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script type="text/javascript" src="/scripts/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="/scripts/bootstrap.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class = "container">
            <a class="navbar-brand" href="/"><i class="fab fa-xing"></i> NITX</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/item">Items <span class="sr-only">(current)</span></a>
                </li>
              </ul>
              <ul class = "navbar-nav navbar-right">
                <% if(!currentUser){ %>
                  <li class="nav-item">
                    <a class="nav-link" href="/signin"><i class="fas fa-sign-in-alt"></i> Sign In</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/user/new"><i class="fas fa-user-plus"></i> Sign Up</a>
                  </li>
                <% } else { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/user/<%= currentUser._id%>"><i class="fas fa-user"></i> Hi, <%= currentUser.name%>!</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/signout"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
                  </li>	
                <% } %>
                </ul>
            </div>
            </div>
          </nav>
          <div class = "container">
            <% if(success && success.length > 0){ %>
             <div class="alert alert-success flash-message" role="alert">
               <%= success %>
             </div>
           <% } %>
           <% if(error && error.length > 0) {%>
             <div class="alert alert-danger flash-message" role="alert">
               <%= error %>
             </div>
           <% } %>
        
